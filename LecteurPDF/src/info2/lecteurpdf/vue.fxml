<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vboxVue" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="info2.lecteurpdf.ControleurVue">
   <children>
      <ToolBar nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
         <items>
            <Group>
               <children>
                  <Button fx:id="btnPrecPage" layoutX="2.0" layoutY="-3.0" mnemonicParsing="false" onAction="#precedentePage" text="&lt;" />
                  <TextField fx:id="txbNbPage" layoutX="33.0" layoutY="-5.0" onAction="#nbPage" prefHeight="31.0" prefWidth="83.0" />
                  <Button fx:id="btnNextPage" contentDisplay="CENTER" layoutX="122.0" layoutY="-3.0" mnemonicParsing="false" onAction="#prochainePage" text="&gt;" />
               </children>
            </Group>
            <Button fx:id="btnPleinEcran" mnemonicParsing="false" onAction="#switchPleinEcran">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../fullscreen.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </items>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ToolBar>
      <ScrollPane fx:id="scrollPaneImg" accessibleRole="IMAGE_VIEW" onContextMenuRequested="#afficherMenuContextuel" pannable="true" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
